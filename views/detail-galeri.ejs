<div class="w-[90vw] mx-auto">
    <div class="flex justify-center h-24">
        <h1 class="text-3xl"><%= title %></h1>
    </div>
    <!-- flash message -->
    <% if (msg && msg.length > 0) { %>
    <div class="bg-green-200 my-3 py-4 px-3 border border-green-400">
        <p><%= msg[0] %></p> <!-- msg[0] karena msg adalah array -->
    </div>
    <% } %>
    <div class="flex flex-col gap-2 mb-4">
        <h2 class="text-2xl"><%= galeri.judul %></h2>
        <div class="flex gap-2">
            <% for( let index = 0; index < galeri.gambar.length; index++ ) { %>
               <a href="/img/galeri/data/<%= galeri.gambar[index] %>" target="_blank">
                    <div class="w-52">
                        <img src="/img/galeri/data/<%= galeri.gambar[index] %>" alt="<%= galeri.gambar[index] %>" class="w-full object-cover aspect-square">
                    </div>
                </a>
                <!-- <%= galeri.gambar[index] %> -->
            <% } %>
        </div>
    </div>
</div>